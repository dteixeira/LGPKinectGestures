<Window x:Class="KinectGestureDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image Name="SkeletonImage" Width="800" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        <Canvas Name="Canvas">
            <Rectangle x:Name="MovableRectangle" Fill="SkyBlue" Visibility="Hidden" Opacity="0.5" Height="150" Stroke="DarkBlue" StrokeThickness="3" Width="150" RenderTransformOrigin="0.6,0.41" Canvas.Left="326" Canvas.Top="236"/>
            <Image x:Name="LeftOpen" Source="Images/left_open.png" Stretch="Fill" Canvas.Left="-100" Canvas.Top="-100"/>
            <Image x:Name="LeftClosed" Source="Images/left_closed.png" Stretch="Fill" Canvas.Left="-100" Canvas.Top="-100"/>
            <Image x:Name="RightOpen" Source="Images/right_open.png" Stretch="Fill" Canvas.Left="-100" Canvas.Top="-100"/>
            <Image x:Name="RightClosed" Source="Images/right_closed.png" Stretch="Fill" Canvas.Left="-100" Canvas.Top="-100"/>
            <Image x:Name="DisengageImage" Source="Images/uncheck.png" Stretch="Fill" Width="70" Height="70" Canvas.Left="365"/>
            <Image x:Name="EngageImage" Source="Images/check.png" Stretch="Fill" Width="70" Height="70" Canvas.Left="365" Visibility="Hidden"/>
        </Canvas>
    </Grid>
</Window>