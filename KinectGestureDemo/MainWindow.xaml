<Window x:Class="KinectGestureDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Canvas Background="Transparent">
            <Ellipse Fill="SkyBlue" Height="20" Width="20" Name="leftHand" Stroke="White" />
            <Ellipse Fill="SkyBlue" Height="20" Width="20" Name="rightHand" Stroke="White" />
            <Ellipse Fill="SkyBlue" Height="20" Width="20" Name="head" Stroke="White" />
        </Canvas>
        <Label Name="gestureLabel"  Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="792" Height="65" FontWeight="Bold" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    </Grid>
</Window>